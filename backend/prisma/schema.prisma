generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.sqlite"
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String
  publications Publication[]
}

model Publication {
  id      Int    @id @default(autoincrement())
  title   String
  content String
  imageUrl String?
  user User @relation(fields: [userId], references: [id])
  userId Int
  createdAt DateTime @default(now())
}
